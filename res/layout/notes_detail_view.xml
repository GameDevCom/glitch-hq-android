<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notes_detail_view"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"     
  	android:orientation="vertical" 
  	android:visibility="gone">

	<LinearLayout android:id="@+id/section_in_reply_to"
  		android:layout_weight="0.0"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content" 
  		android:orientation="vertical">
  
		<LinearLayout android:layout_width="fill_parent"
  			android:layout_height="wrap_content" 
  			android:paddingTop="10sp"
  			android:paddingLeft="10sp"
  			android:paddingRight="10sp"
  			android:orientation="vertical">
  
	  		<LinearLayout android:layout_width="fill_parent"
		  		android:layout_height="wrap_content" 
		  		android:layout_gravity="left" >
	
	  			<TextView android:text="" 
	  				android:id = "@+id/itemName"
	  				android:textSize="16sp"
	  				android:layout_marginBottom="5sp"
		    		style = "@style/PlayNameStyle"  
		    		android:layout_gravity="center"
		    		android:gravity="center"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"/>
				
	  		</LinearLayout> 

  			<TextView android:text="" 
  				android:id = "@+id/itemDetail"
		    	style = "@style/NormalTextStyle"  
	  			android:textSize="16sp"
	  			android:autoLink="all"
		    	android:layout_gravity="center"
		    	android:gravity="left"
				android:paddingTop="20sp"
				android:paddingLeft="10sp"
				android:paddingBottom="5sp"
				android:background="@drawable/message_background_small"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>

  			<TextView android:text="" 
  				android:id = "@+id/itemTime"
		    	style = "@style/TimeStyle"  
		    	android:textSize="14sp"
		    	android:layout_gravity="center"
		    	android:gravity="left"
				android:paddingLeft="10sp"
				android:paddingRight="10sp"
				android:paddingTop="5sp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>

		</LinearLayout>
  
		<ImageView android:src="@drawable/in_reply_to"
		    android:gravity="center" 
	    	android:layout_gravity="center"
			android:layout_width="fill_parent" 
			android:layout_height="50sp"/>
  
	</LinearLayout>
  
<LinearLayout
  android:id="@+id/section_myself"
  android:layout_weight="0.0"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:paddingLeft="10sp"
  android:paddingRight="10sp"
  android:orientation="vertical">
  
  <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:layout_gravity="left" >

  <ImageView android:id="@+id/activity_detail_icon" android:layout_gravity="left"
  			android:paddingLeft="8sp"  android:paddingRight="8sp"  android:layout_weight="0.0"
			android:layout_width="60sp" android:layout_height="60sp" />

  <TextView android:text="" 
  			android:id = "@+id/itemName"
  			android:layout_weight="1.0"
  			android:textSize="22sp"
	    	style = "@style/PlayNameStyle"  
	    	android:layout_gravity="center_vertical"
	    	android:gravity="center_vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

  <ImageView android:id="@+id/activity_go_arrow" android:layout_gravity="center" android:layout_weight="0.0"
  			android:visibility="gone"
  			android:src="@drawable/go_arrow"
  			android:paddingLeft="8sp"  android:paddingRight="8sp" 
			android:layout_width="30sp" android:layout_height="30sp" />
			
  </LinearLayout> 

  <TextView android:text="" 
  			android:id = "@+id/itemDetail"
	    	style = "@style/NormalTextStyle"  
	    	android:layout_gravity="center"
	    	android:gravity="left"
			android:paddingTop="20sp"
			android:paddingLeft="10sp"
			android:paddingBottom="5sp"
			android:background="@drawable/message_background_big"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>

  <RelativeLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" >
  <TextView android:text="" 
  			android:id = "@+id/itemTime"
	    	style = "@style/TimeStyle"  
	    	android:textSize="14sp"
	    	android:layout_gravity="center"
	    	android:gravity="left"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentLeft="true"
			android:paddingLeft="10sp"
			android:paddingRight="10sp"
			android:paddingTop="5sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  <TextView android:text="" 
  			android:id = "@+id/itemLikedByPerson"
	    	style = "@style/TimeStyle"  
	    	android:textSize="14sp"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentRight="true"
			android:paddingLeft="10sp"
			android:paddingRight="10sp"
			android:paddingTop="5sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>
   </RelativeLayout>
    
</LinearLayout>

<LinearLayout
  android:layout_weight="0.0"
  android:id="@+id/section_replies"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="vertical">

<ImageView  android:gravity="center" android:src="@drawable/replies"
	    	android:layout_gravity="center"
			android:layout_width="fill_parent" android:layout_height="50sp"/>
  
<LinearLayout
  android:id="@+id/section_replies_content"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:paddingTop="10sp"
  android:paddingLeft="10sp"
  android:paddingRight="10sp"
  android:orientation="vertical">
  
</LinearLayout>

</LinearLayout>

</LinearLayout>
