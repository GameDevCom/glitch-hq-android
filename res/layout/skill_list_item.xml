<LinearLayout android:layout_height="wrap_content" android:layout_gravity="center" 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:orientation="vertical">
			
<LinearLayout android:id="@+id/skill_item" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center"
	android:clickable="true"
	android:background="@drawable/list_item_bg_selector"
	android:layout_marginRight="5sp"
	android:layout_width="fill_parent"
	android:padding="3sp">
	
  	<ImageView android:id="@+id/skill_icon" 
      	android:layout_gravity="center" 
      	android:layout_weight="0.0"
		android:padding="3sp"
		android:layout_width="44sp" 
		android:layout_height="44sp" />

  <LinearLayout android:layout_height="wrap_content" android:layout_gravity="center" android:layout_weight="1.0"
			android:layout_width="wrap_content" android:orientation="vertical">

  <TextView android:text="" android:id="@+id/skill_name" 
	    	style = "@style/PlayNameStyle"  
	    	android:layout_gravity="left" android:layout_weight="1.0"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>

  <TextView android:text="" android:id="@+id/skill_time" 
	    	style = "@style/NormalTextStyle"  
	    	android:textColor="#808080"
	    	android:layout_gravity="left" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  
  </LinearLayout>
  
  <ImageView android:id="@+id/skill_status" android:layout_gravity="center"
  			android:src="@drawable/pause"
			android:layout_width="24sp" android:layout_height="24sp" />
  			
</LinearLayout>	
   
<View android:id="@+id/list_diveider" android:layout_height="1sp" android:layout_gravity="center" android:background="#e0e0e0"
			android:layout_width="fill_parent" />
    	
</LinearLayout>
